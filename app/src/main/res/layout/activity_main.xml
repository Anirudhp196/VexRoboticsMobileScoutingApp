                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chilanka"
                android:textAlignment = "center"
                android:layout_weight="1"
                android:textColor="#EFE3E3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_skillsType22"
                android:layout_width="wrap_content"
                android:textAlignment = "center"
                android:layout_gravity="center"
                android:fontFamily="@font/chilanka"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#EFE3E3" />

            <TextView
                android:id="@+id/id_prog2Score"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chilanka"
                android:textAlignment = "center"

                android:layout_weight="1"
                android:textColor="#EFE3E3" />

            <TextView
                android:id="@+id/id_prog2Attempts"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textAlignment = "center"
                android:fontFamily="@font/chilanka"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#EFE3E3" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_recentAwards"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment = "center"

            android:fontFamily="@font/arsenal"

            android:text="Recent Awards: "
            android:textColor="#EFE3E3" />

        <TextView
            android:id="@+id/id_awardComp1"
            android:layout_width="wrap_content"
            android:textAlignment = "center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chilanka"
            android:textColor="#EFE3E3" />

        <TextView
            android:id="@+id/id_awardTitle1"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chilanka"
            android:textAlignment = "center"
            android:layout_marginBottom="10dp"
            android:textColor="#EFE3E3" />

