<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#1E3D5C"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_teamNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#EFE3E3"
            android:inputType="textPersonName"
            android:text="Enter Team Number: " />

        <Button
            android:id="@+id/id_getDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Details" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/arsenal"
            android:text="General Information: "
            android:textColor="#EFE3E3" />

        <TextView
            android:id="@+id/id_robotTeamName"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fjord_one"
            android:textColor="#EFE3E3" />

        <TextView
            android:id="@+id/id_organization"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fjord_one"

            android:textColor="#EFE3E3"

            />

        <TextView
            android:id="@+id/id_teamAddress"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fjord_one"

            android:layout_height="wrap_content"
            android:textColor="#EFE3E3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_Rankings"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Recent Rankings: "
            android:fontFamily="@font/arsenal"

            android:textColor="#EFE3E3" />

        <TextView
            android:id="@+id/id_competition1"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textAlignment = "center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chilanka"
            android:textColor="#EFE3E3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"



            android:textColor="#EFE3E3">

            <TextView
                android:id="@+id/id_comp1Wins"
                android:layout_width="wrap_content"
                android:textAlignment = "center"

                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chilanka"
                android:layout_weight="1"
                android:textColor="#EFE3E3" />

            <TextView
                android:id="@+id/id_comp1Losses"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chilanka"
                android:textAlignment = "center"

                android:layout_weight="1"

                android:textColor="#EFE3E3" />

            <TextView
                android:id="@+id/id_comp1WP"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textAlignment = "center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chilanka"
                android:layout_weight="1"
                android:textColor="#EFE3E3" />

            <TextView
                android:id="@+id/id_comp1AP"
                android:layout_width="wrap_content"
                android:textAlignment = "center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chilanka"
                android:layout_weight="1"
                android:textColor="#EFE3E3" />

            <TextView
                android:id="@+id/id_comp1SP"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chilanka"
                android:textAlignment = "center"
                android:layout_weight="1"
                android:textColor="#EFE3E3" />

            <TextView
                android:id="@+id/id_comp1AverageScore"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textAlignment = "center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chilanka"
                android:layout_weight="1"
                android:textColor="#EFE3E3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom = "10dp"
        android:orientation="vertical">

        <TextView
