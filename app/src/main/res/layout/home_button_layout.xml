<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#192775"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/text_me_one"
        android:gravity="center"
        android:text="Welcome to the New Jersey States Championship VEX Spin Up 2022-2023 Scouting App"
        android:textColor="#F8FAF9"
        android:textSize="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop = "200dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_scoutingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/unna"
            android:text="Proceed To Scouting"
            android:textSize="24dp" />
    </LinearLayout>

</LinearLayout>